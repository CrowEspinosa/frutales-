        <div class="agregar-valoracion">
            <h3>Agrega tu valoración</h3>
            <form id="form-valoracion">
                <label for="estrellas">Tu calificación:</label><br>
                <div class="estrellas" id="estrellas">
                    <span data-valor="1">⭐</span>
                    <span data-valor="2">⭐</span>
                    <span data-valor="3">⭐</span>
                    <span data-valor="4">⭐</span>
                    <span data-valor="5">⭐</span>
                </div>
                <input type="hidden" id="calificacion" name="calificacion" value="0"><br><br>
                <label for="comentario">Comentario (opcional):</label><br>
                <textarea id="comentario" name="comentario" rows="4" cols="50"></textarea><br><br>
                <button type="button" onclick="agregarValoracion()">Enviar</button>
            </form>
        </div>
    </div>

    <script>
        // Función para manejar las estrellas seleccionadas
        const estrellas = document.querySelectorAll('#estrellas span');
        estrellas.forEach(estrella => {
            estrella.addEventListener('click', function () {
                const valor = this.getAttribute('data-valor');
                document.getElementById('calificacion').value = valor;

                // Resalta las estrellas seleccionadas
                estrellas.forEach(e => e.style.color = e.getAttribute('data-valor') <= valor ? 'gold' : 'gray');
            });
        });

        // Función para agregar una nueva valoración
        function agregarValoracion() {
            const calificacion = document.getElementById('calificacion').value;
            const comentario = document.getElementById('comentario').value || "Sin comentario";
            
            if (calificacion > 0) {
                const lista = document.querySelector('.lista-valoraciones');
                const nuevaValoracion = document.createElement('div');
                nuevaValoracion.classList.add('valoracion');
                nuevaValoracion.innerHTML = `
                    <p><strong>Nuevo Usuario:</strong> ${'⭐'.repeat(calificacion)}</p>
                    <p>${comentario}</p>
                `;
                lista.appendChild(nuevaValoracion);

                // Limpiar formulario
                document.getElementById('form-valoracion').reset();
                estrellas.forEach(e => e.style.color = 'gray');
                document.getElementById('calificacion').value = 0;
            } else {
                alert("Por favor selecciona una calificación.");
            }
        }
    </script>
